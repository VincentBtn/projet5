{% extends 'base.html.twig' %}


{% block body %}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Cathédrale Saint-André de Bordeaux</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Accueil</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Evenements</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Contacts</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<section id="diaporama">

		<figure>
			<img src="../images/DSC_1956.jpg" alt="Image 1">
			<figcaption>1</figcaption>
		</figure>
		<figure>
			<img src="../images/2662.jpg" alt="Image 2">
			<figcaption>2</figcaption>
		</figure>
		<figure>
			<img src="../images/2323.jpg" alt="Image 3">
			<figcaption>3</figcaption>
		</figure>
		<figure>
			<img src="../images/2173.jpg" alt="Image 4">
			<figcaption>4</figcaption>
		</figure>

		<div class="next">
			<i class="fas fa-fast-forward"></i>
		</div>

		<div class="previous">
			<i class="fas fa-fast-backward"></i>
		</div>

		<div class="stop">
			<i class="far fa-pause-circle"></i>
		</div>

		<div class="play">
			<i class="far fa-play-circle"></i>
		</div>

</section>

<div class="row row-cols-1 row-cols-md-3 g-4">
{% for post in posts %}
  <div class="col">
    <div class="card h-100">
      {% set imgSrc = post.uploadFilename ? asset('uploads/' ~ post.uploadFilename) : asset('images/DSC_1956.jpg') %}
      
      <img src="{{ imgSrc }}" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{ post.title }}</h5>
        <p class="card-text">{{ post.content }}</p>
      </div>
    </div>
  </div>
{% endfor %}
</div>


{% endblock %}
