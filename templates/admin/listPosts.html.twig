{% extends 'base.html.twig' %}


{% block body %}

<div>
    <h1>Listes des articles Ã  modifier ou supprimer</h1>
    <table class="table table-striped">
        <thead>
            <tr>
            <th scope="col">Post Id</th>
            <th scope="col">Contenu</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>
                    {{ post.id }}
                </td>
                <td>
                    {{ post.content }}
                </td>
                <td>
                    <a href="{{ path('post_delete', {'id': post.id}) }}" class="btn btn-outline-danger">Supprimer</a>
                    <a href="{{ path('post_update', {'id': post.id}) }}" class="btn btn-outline-success">Modifier</a>
                    
                </td>
            </tr>


        {% endfor %}   
        
        </tbody>
    </table>
    
</div>
{% endblock %}